{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "dist",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
